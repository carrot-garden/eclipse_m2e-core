<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.carrotgarden.a</groupId>
        <artifactId>carrot-a</artifactId>
        <version>0-SNAPSHOT</version>
        <relativePath>.mvn</relativePath>
    </parent>

    <groupId>com.carrotgarden.maven</groupId>
    <artifactId>scalor-m2e-deploy</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>

    <properties>

        <eclipse.groupPath>org/eclipse/m2e</eclipse.groupPath>
        <eclipse.package>m2e-core</eclipse.package>
        <eclipse.version>1.10</eclipse.version>
        
        <sourceFolder>${project.basedir}/scalor/${eclipse.groupPath}</sourceFolder>
        <targetFolder>${eclipse.groupPath}</targetFolder>

    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.carrotgarden.maven</groupId>
                <artifactId>bintray-maven-plugin</artifactId>
                <configuration>
                    <subject>random-maven</subject>
                    <repository>scalor</repository>
                    <sourceFolder>${sourceFolder}</sourceFolder>
                    <targetFolder>${targetFolder}</targetFolder>
                    <bintrayPackage>${eclipse.package}</bintrayPackage>
                    <bintrayVersion>${eclipse.version}</bintrayVersion>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
